<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fund_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/fund1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@id/fund_guideline"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/fund2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/fund_guideline"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/fund3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toTopOf="@id/fund_guideline"
        app:layout_constraintRight_toLeftOf="@id/fund5"/>
    <TextView
        android:id="@+id/fund4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fund_guideline"
        app:layout_constraintRight_toRightOf="@id/fund3"
        app:layout_constraintLeft_toLeftOf="@id/fund3"/>
    <TextView
        android:id="@+id/fund5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/fund_guideline"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/fund6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fund_guideline"
        app:layout_constraintRight_toRightOf="@id/fund5"
        app:layout_constraintLeft_toLeftOf="@id/fund5"/>

</androidx.constraintlayout.widget.ConstraintLayout>