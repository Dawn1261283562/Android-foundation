<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="history_text1,delete_all_history1"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/history_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15dp"
        android:text="搜索历史"/>
    <ImageButton
        android:id="@+id/help_button_sear_frag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/history_text1"
        app:layout_constraintBottom_toBottomOf="@id/history_text1"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/icon1_5"/>


    <com.example.studying.FlowLayout
        android:id="@+id/frag1_history_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/history_text1"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/delete_all_history1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frag1_history_flow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@mipmap/icon1_5"
        android:text="  清空搜索历史"
        android:background="@color/transparent"/>


    <androidx.constraintlayout.widget.Group
        android:id="@+id/sear_frag1_titlegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="visible"
        app:constraint_referenced_ids="back_view1,te1_1,te1_2,te1_3"/>
    <View
        android:id="@+id/back_view1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_all_history1"
        android:background="#E6E6E6"/>
    <TextView
        android:id="@+id/te1_1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_view1"
        app:layout_constraintBottom_toBottomOf="@id/back_view1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="代码"/>

    <TextView
        android:id="@+id/te1_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/te1_1"
        app:layout_constraintBottom_toBottomOf="@id/te1_1"
        android:text="基金名"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/te1_3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/te1_1"
        app:layout_constraintBottom_toBottomOf="@id/te1_1"
        android:text="管理者"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/sear_frag1_helptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/help_button_sear_frag1"
        app:layout_constraintTop_toTopOf="@id/help_button_sear_frag1"
        android:visibility="gone"
        tools:visibility="visible"
        android:padding="10dp"
        android:text="基金搜索基金搜索基金搜索\n基金搜索基金搜索基金搜索\n基金搜索基金搜索"
        android:background="@drawable/search_background"/>

    <ListView
        android:id="@+id/list_search1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/back_view1"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>