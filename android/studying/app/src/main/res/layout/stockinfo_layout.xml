<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:text="text"></TextView>


        <Button
            android:id="@+id/Button_01"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text"
            android:text="日k"></Button>

        <Button
            android:id="@+id/Button_02"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text"
            android:layout_toEndOf="@id/Button_01"
            android:text="周k"></Button>

        <Button
            android:id="@+id/Button_03"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text"
            android:layout_toEndOf="@id/Button_02"
            android:text="分时"></Button>

        <Button
            android:id="@+id/Button_04"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/text"
            android:layout_toEndOf="@id/Button_03"
            android:text="月k"></Button>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/Button_01"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"></ImageView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/imageView"
            android:layout_marginTop="0dp"
            android:paddingBottom="0dp"></TextView>


    </RelativeLayout>
</ScrollView>